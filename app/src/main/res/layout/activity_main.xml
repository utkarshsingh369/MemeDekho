<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/appName"
        android:textColor="@color/main"
        android:textSize="45sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onShareLink"
                        android:paddingStart="-5dp"
                        app:cornerRadius="30dp"
                        android:paddingLeft="-5dp"
                        android:paddingRight="-5dp"
                        android:text="share\nlink"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:backgroundTint="@color/main" />

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingBottom="5dp"
                        android:layout_weight="2"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:textColor="@color/main"/>

                    <Button
                        android:id="@+id/downloadButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onShareMeme"
                        android:paddingLeft="-5dp"
                        android:paddingRight="-5dp"
                        android:text="share\nmeme"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:backgroundTint="@color/main"
                        app:cornerRadius="30dp" />

                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/grey" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_height="468dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="468dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="468dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="69dp"
                                android:layout_height="81dp"
                                android:layout_margin="180dp" />
                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/main"
                android:onClick="onNext"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textColorHint="#000000"
                android:textSize="35sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/main"
                android:onClick="saveToGallery"
                android:text="Save to Gallery"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:cornerRadius="30dp" />

            <TextView
                android:id="@+id/textViewAbout"
                android:layout_width="391dp"
                android:layout_height="222dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="300dp"
                android:padding="5dp"
                android:background="#334756"
                android:text="About:\n\nCreated By - Utkarsh Singh\nContact - utk0609@gmail.com\nversion - 1.0.0\n\n(Please rate us on Play Store and provide feedback and help me to create a better app experience for you)\n         ;)"
                android:textColor="#07FB11"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonLog"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="150dp"
                android:backgroundTint="#334756"
                android:onClick="showUpdate"
                android:text="Update Logs"
                android:textColor="#FF4C29"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/textViewAbout2"
                app:layout_constraintTop_toBottomOf="@id/buttonPubg"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="1231dp" />

        </LinearLayout>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>